{
  "name": "smux",
  "version": "0.0.0",
  "description": "Simple state machine",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/geowarin/smux#readme",
  "bugs": {
    "url": "https://github.com/geowarin/smux/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geowarin/smux.git"
  },
  "author": "Geoffroy Warin",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "check": "pnpm format && pnpm run typecheck && pnpm run lint",
    "lint": "oxlint .",
    "typecheck": "tsgo -b --noEmit",
    "preview": "vite preview",
    "format": "prettier --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "release": "bumpp && npm publish"
  },
  "dependencies": {
    "mermaid": "^11.12.0"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/node": "^24.5.2",
    "@typescript/native-preview": "7.0.0-dev.20250926.1",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "bumpp": "^10.2.3",
    "oxlint": "^1.18.0",
    "prettier": "^3.3.3",
    "tsdown": "^0.15.5",
    "vitest": "^3.2.4"
  }
}
